{
  "swagger": "2.0",
  "info": {
    "description": "This is the official documentation of the CMPaaS Project APIs. These services are available to end users on the [knowledge portal](https://cmportal.org).",
    "version": "0.0.1",
    "title": "CMPaaS Project",
